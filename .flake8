[flake8]
max-line-length = 88
max-complexity = 10
extend-select = C,E,F,W,B,B9
ignore = E203, E266, E501, W503
per-file-ignores =
    __init__.py: F401
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .nox,
    .pytest_cache,
    .mypy_cache,
    .venv,
    .env
max-doc-length = 88
statistics = True
count = True
